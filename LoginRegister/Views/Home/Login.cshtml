@model LoginRegister.Models.User

@{
    ViewBag.Title = "Login";
}



<style>
    body, html {
        height: 100%;
        margin: 0;
    }

    body {
       
        background-image: url('../../content/images/login logo.jpg');
        height: 100%;
        width: 100%;
        background-position: center;
        background-size: 1200px 600px;
        background-repeat: no-repeat;
        text-align: center;
    }
</style>
 


<div class="row justify-content-md-center">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h2>Login</h2>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "Email" })

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                    </div>

                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-primary" value="Login" />
                    </div>
                    <h6 style="color:red;">Not Have Account? Then Register </h6>
                }
            </div>

            <form action="Register">
                <input type="submit" name="Register" value="Register For New User" />
            </form>
            <br />
            <h6 style="color:darkslateblue;">are you Admin? Then Login Here  </h6>
            <div>
                @Html.ActionLink("AdminLogin", "AdminLogin", "")
            </div>

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
        </div>
    </div>
</div>